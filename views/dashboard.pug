doctype html
html
  head
    style 
       include ../static/admin-dashboard.css
    title dashboard
  body
    .container
        #left
            nav
                ul
                    li#element1.element
                    a(href='dashboard') dashboard
                    li#element2.element
                    a(href='#') jobs
                    li#element3.element
                    a(href='#') apply jobs
                    li#element4.element
                    a(href='#') profile
                    li#element5.element
                    a(href='#') setting
        #right 
            header#navigation
              form(action="/logout" method="POST") 
                button(type="logout") logout 
            .content
                h1 Dashboard
                each job in jobList
                  h2= job.job_title
                  p= job.email
                  p= job.type
                  p= job.application_form
                  p= job.deadline